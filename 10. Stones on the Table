https://codeforces.com/problemset/problem/266/A

#include <iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    string s;
    cin>>s;
    int min_removal=0;
    for (int i=0;i<n;i++){
        if (s[i]==s[i+1]){
            min_removal++;
        }
    }
    
    cout<<min_removal<<endl;
    return 0;
}
