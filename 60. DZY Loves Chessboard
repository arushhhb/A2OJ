https://codeforces.com/problemset/problem/445/A

#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;

    vector<string> chessboard(n);
    for (int i = 0; i < n; i++) {
        cin >> chessboard[i];
    }

    // Create a new chessboard
    vector<vector<char>> new_chessboard(n, vector<char>(m, '-'));

    // Iterate through each cell
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            // Check if the cell is good
            if (chessboard[i][j] == '.') {
                // Assign 'W' if the sum of the row and column indices is even, otherwise assign 'B'
                new_chessboard[i][j] = (i + j) % 2 == 0 ? 'W' : 'B';
            }
        }
    }

    // Print the new chessboard
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << new_chessboard[i][j];
        }
        cout << endl;
    }

    return 0;
}
