https://codeforces.com/problemset/problem/118/B

#include <bits/stdc++.h>
using namespace std;
int main() {
  int n;
  cin>>n;
  for (int j=1;j<=n+1;j++){
    for (int i=1;i<=n-j+1;i++){
      cout<<"  ";
    }
     for (int i=1;i<=j-1;i++){
     cout<<i-1<<" ";
   }
    for (int i=j;i>0;i--){
      cout<<i-1<<" ";
    }
    
    cout<<endl;
  }
  
  for (int j=1;j<=n;j++){
    for (int i=1;i<=j;i++){
      cout<<"  ";
    }
    for (int i=1;i<=n-j;i++){
      cout<<i-1<<" ";
    }
    for (int i=1;i<=n-j+1;i++){
      cout<<n-i-j+1<<" ";
    }
    
    
    cout<<endl;
  }

  
}
