https://codeforces.com/problemset/problem/116/A

#include <bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int in=0;
    int max=INT_MIN;
    for (int i=0;i<n;i++){
        int a;
        cin>>a;
        int b;
        cin>>b;
        in =in+b-a;
        if (in>max){
            max=in;
        }
    }
    cout<<max;
}
